{% extends 'base.html.twig' %}
{% block body %}
    <div class="sm:w-1/1 md:w-1/3 lg:w-1/5 mx-auto bg-gray-100 mt-4 rounded border-2">
        <div class="p-5 py-3">
            <h5>Rejestracja</h5>
        </div>
        <div class="border-b-2 m-0"></div>
        <div class="p-5">
            {{ form_start(form) }}
            {{ form_errors(form) }}
            {{ form_row(form.email) }}
            {{ form_row(form.plainPassword.first) }}
            {{ form_row(form.plainPassword.second) }}
            {{ form_row(form.name) }}
            <div>
                <input type="submit" class="btn" value="Rejestruj" />
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}