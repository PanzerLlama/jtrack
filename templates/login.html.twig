{% extends 'base.html.twig' %}
{% block body %}
<div class="sm:w-1/1 md:w-1/3 lg:w-1/5 mx-auto bg-gray-100 mt-4 rounded border-2">
    <div class="p-5 py-3">
        <h5>Logowanie</h5>
    </div>
    <div class="border-b-2 m-0"></div>
        <div class="p-5">
        {{ form_start(form) }}
        {{ form_errors(form) }}
        {{ form_row(form.email) }}
        {{ form_row(form.password) }}
        <div>
            <input type="submit" class="btn" value="Zaloguj" />
            {#<div class="pt-3 text-gray-600"><a href="{{ url('forgot_password') }}">Forgot password?</a></div>#}
        </div>
        {{ form_rest(form) }}
    </div>
</div>
{% endblock %}
