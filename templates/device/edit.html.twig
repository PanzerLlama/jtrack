{% extends 'base.html.twig' %}
{% block css %}
<link rel="stylesheet" href="{{ asset('la-color-picker-master/la_color_picker.css') }}" type="text/css">
{% endblock %}
{% block js %}
<script src="{{ asset('la-color-picker-master/la_color_picker.js') }}"></script>
{% endblock %}
{% block body %}
<div class="container mx-auto p-4 py-8">
    {% if device.id is defined %}
        {{ include('page_header.html.twig', { title: 'Edycja urządzenia ' ~ device.name }) }}
    {% else %}
        {{ include('page_header.html.twig', { title: 'Rejestracja nowego urządzenia'}) }}
    {% endif %}
    <div class="flex">
        <div class="w-1/2">
            {{ form_start(form) }}
            {{ form_row(form.name) }}
            {{ form_row(form.trackerUid) }}
            {{ form_row(form.secret) }}
            <div class="w-1/3">
                {{ form_row(form.color) }}
                <div class="palette" id="colorPalette"></div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
